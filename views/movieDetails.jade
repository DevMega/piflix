doctype html
html
    head
        title PiFlix
        link(href='/css/style.css', rel='stylesheet')
        script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
        script(type='text/javascript', src='/socket.io/socket.io.js')
        script(type='text/javascript', src='../js/movieOverview.js')
    body
        div
            h1 PiFlix

            h2 #{title}
            img(src='#{coverLarge}')
            p #{descriptionLong}

            if subtitles
                h4 #{subtitles} subtitles available!

            a(href='/movie/play/#{id}')
                img(src='/img/play.png')
